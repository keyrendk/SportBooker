<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/facilityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_serif_pro_bold"
            android:textColor="@color/black"
            android:text="Facility Name -"
            android:textSize="16sp"
            android:layout_marginBottom="10dp" />
        <TextView
            android:id="@+id/facilityType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:fontFamily="@font/source_serif_pro"
            android:textColor="@color/black"
            android:text=" Facility Type"
            android:textSize="16sp"
            android:layout_marginBottom="10dp" />
        <TextView
            android:id="@+id/facilityPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:fontFamily="@font/source_serif_pro"
            android:textColor="@color/black"
            android:text="Facility Name"
            android:textSize="16sp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/facilityDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_serif_pro"
        android:textColor="@color/black"
        android:text="Description"
        android:textSize="12sp"
        android:layout_marginBottom="10dp" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2">
        <Button
            android:text="08:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnWeight="1" />
        <Button
            android:text="10:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1" />
        <Button
            android:text="13:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_columnWeight="1"/>
        <Button
            android:text="15:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="1"/>
        <Button
            android:text="17:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnWeight="1"/>
        <Button
            android:text="19:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_columnWeight="1"/>
    </GridLayout>
</LinearLayout>